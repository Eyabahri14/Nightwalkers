{% extends 'admin/base.html.twig' %}
{% block title %}<title>Add Post</title>{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h4 class="m-t-0 m-b-30 header-title">Ajouter un article</h4>
                    {{form_start(f)}}

                    <div class="form-group">
                        <label for="name">Nom</label>
                        {{ form_widget(f.name, {'attr':{'class':'form-control'}})}}
                        <label style="color: red">{{ form_errors(f.name)}}</label>
                    </div>


                    <div class="form-group">
                        <label for="name">description</label>
                        {{ form_widget(f.description, {'attr':{'class':'form-control'}})}}
                        <label style="color: red">{{ form_errors(f.description)}}</label>

                    </div>

                    <div class="form-group">
                        <label for="name">recette</label>
                        {{ form_widget(f.recette, {'attr':{'class':'form-control'}})}}

                    </div>

                    <div class="form-group">
                        <label >Picture</label>
                        <div></div>
                        {{ form_widget(f.picture, {'attr':{'class':''}})}}
                        <label style="color: red">{{ form_errors(f.picture)}}</label>

                    </div>

                    {{ form_end(f) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}