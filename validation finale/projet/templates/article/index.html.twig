{% extends 'admin/base.html.twig' %}
{% block title %}<title>Browse Tutorials</title>{% endblock %}

{% block body %}


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <h4 class="m-t-0 header-title">Posts</h4>
                    <p class="text-muted font-14 m-b-30">
                    </p>
                    <div id="datatable-buttons_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dt-buttons btn-group">
                                    <a href="{{ path('add_article') }}" class="btn btn-secondary buttons-copy buttons-html5">
                                        <span>Create new post</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Picture</th>
                                        <th>description</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for p in products %}
                                        <tr>

                                            <td>{{ p.name }}</td>
                                            <td>
                                                <img style="width : 50px ; heigth : 50px" src="{{ app.request.getBaseURL() }}/uploads/brochures/{{ p.picture }}"/>
                                            </td>
                                            <td>{{ p.description}}</td>
                                            <td>{{ p.date ? p.date|date('Y-m-d') : ''}}</td>
                                            <td>
                                                <a href="{{ path('modifier_article',{'id':p.id}) }}"><i class="fa fa-pencil" style="color:#00aff0;font-size:20px"></i></a>
                                                <a   data-toggle="modal" data-target="#{{ p.id }}exampleModal">
                                                    <i class="fa fa-trash" style="color:#ff5b5b;font-size:20px"></i>
                                                </a>

                                                <!-- Modal -->
                                                <div class="modal fade" id="{{ p.id }}exampleModal"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Delete this post ?</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>

                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">annuler</button>
                                                                <a href="{{ path('supprimer_article',{'id':p.id}) }}" type="button" class="btn btn-primary">Comfimer</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>


                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}


