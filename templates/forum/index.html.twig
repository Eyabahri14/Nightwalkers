{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
<div class="content-page">

    <!-- Start content -->

    <div class="content">
        <div class="container-fluid">
            <!-- Start All Pages -->
            <div class="all-page-title page-breadcrumb">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-lg-12" class="af-forum-header">
                            <h1>Forum</h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End All Pages -->

            <!-- Start blog -->
            <div class="blog-box">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="heading-title text-center">

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        {%  for thematique in thematiques %}
                        <div class="col-lg-4 col-md-6 col-12">
                            <div class="blog-box-inner-e">
                                <div class="blog-img-box">
                                    <img class="img-fluid" src="{{ asset('uploads/thematique_image/' )~thematique.image  }}" alt="">
                                </div>
                                <div class="blog-detail-e">
                                    <h1>   </h1>
                                    <h4>     {{ thematique.nom }}      </h4>

                                    <a class="btn btn-lg btn-circle btn-outline-new-white" href="{{ path('discussions',{'id':thematique.id}) }}">Voir Discussions</a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
