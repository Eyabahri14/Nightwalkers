{% extends 'base1.html.twig' %}

{% block body %}
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row" style="display: flex;align-items: center;justify-content: center">
                    <div class="col-md-6">
                        <div class="card-box">
                            <h4 class="m-t-0 m-b-30 header-title">Modifier Commentaire</h4>
                            {{form_start(f)}}


                            <div class="form-group">
                                <label for="name">description</label>
                                {{ form_widget(f.description, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                <label for="name">parent</label>
                                {{ form_widget(f.parent, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                <label for="name">discussion</label>
                                {{ form_widget(f.discussion, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                <label for="name">like</label>
                                {{ form_widget(f.nblike, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                {{ form_widget(f.Submit,{'attr':{'class':'btn btn-pink btn-rounded w-md waves-effect waves-light m-b-5'}}) }}
                            </div>
                            {{ form_end(f) }}

                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>




{% endblock %}