{% extends 'base1.html.twig' %}

{% block body %}
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <a href="{{ path('add_article') }}">
                        <button type="button" class="btn btn-purple btn-rounded w-md waves-effect waves-light m-b-5">Ajouter article</button>
                    </a>
                </div>

                <div class="row" style="display: flex;align-items: center;justify-content: center">
                    <div class="col-lg-6">
                        <div class="card-box">
                            <div class="dropdown pull-right">

                                </a>

                            </div>


                            <table class="table">
                                <thead class="thead-light">
                                <tr>
                                    <th>id</th>
                                    <th>Nom</th>
                                    <th>Picture</th>
                                    <th>description</th>
                                    <th>Date</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for p in products %}
                                    <tr>

                                        <th scope="row">{{ p.id }}</th>
                                        <td>{{ p.name }}</td>
                                        <td>
                                            <img style="width : 50px ; heigth : 50px" src="{{ app.request.getBaseURL() }}/uploads/brochures/{{ p.picture }}"/>
                                        </td>
                                        <td>{{ p.description}}</td>
                                        <td>{{ p.date ? p.date|date('Y-m-d') : ''}}</td>
                                        <td><a href="{{ path('modifier_article',{'id':p.id}) }}"><i class="fa fa-pencil" style="color:#00aff0;font-size:20px"></i></a> </td>
                                        <td>
{#                                            <a href="{{ path('suppression',{'id':p.id}) }}"><i class="fa fa-trash" style="color:#ff5b5b;font-size:20px"></i> </a>#}
                                            <!-- Button trigger modal -->
                                            <a   data-toggle="modal" data-target="#{{ p.id }}exampleModal">
                                                <i class="fa fa-trash" style="color:#ff5b5b;font-size:20px"></i>
                                            </a>

                                            <!-- Modal -->
                                            <div class="modal fade" id="{{ p.id }}exampleModal"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Delete this post ?</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">annuler</button>
                                                            <a href="{{ path('supprimer_article',{'id':p.id}) }}" type="button" class="btn btn-primary">Comfimer</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>

                    </div>


                </div>

            </div>
        </div>









    </div>




{% endblock %}