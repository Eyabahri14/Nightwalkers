{% extends 'base.html.twig' %}
{% block body %}

<div class="row " style="display: flex;align-items: center;justify-content: center; padding-top: 10cm">
    <div class="col-lg-6">
        <div class="card-box">
            <div class="dropdown pull-right">

                </a>

            </div>


            <table class="table">
                <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Nom</th>
                    <th>Picture</th>
                    <th>description</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>

                {% for p in favoris_article %}
                    <tr>

                        <th scope="row"></th>
                        <td>{{ p.name }}</td>
                        <td>
                            <img style="width : 50px ; heigth : 50px" src="{{ app.request.getBaseURL() }}/uploads/brochures/{{ p.picture }}"/>
                        </td>
                        <td>{{ p.description}}</td>

                        <td>
                            {#                                            <a href="{{ path('suppression',{'id':p.id}) }}"><i class="fa fa-trash" style="color:#ff5b5b;font-size:20px"></i> </a>#}
                            <!-- Button trigger modal -->
                            <a   data-toggle="modal" data-target="#{{ p.id }}exampleModal">
                                <i class="fa fa-trash" style="color:#ff5b5b;font-size:20px"></i>
                            </a>

                            <!-- Modal -->
                            <div class="modal fade" id="{{ p.id }}exampleModal"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Delete this post ?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">annuler</button>
                                            <a href="{{ path('remove_from_favoris',{'id':p.id}) }}" type="button" class="btn btn-primary">Comfimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>


                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

    </div>


</div>
{% endblock %}
