{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
    <div class="content-page">

        <!-- Start content -->

        <div class="content">
            <div class="container-fluid">
                <!-- Start All Pages -->
                <div class="all-page-title page-breadcrumb">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-lg-12" class="af-forum-header">
                                <h1>Forum</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End All Pages -->

                <!-- Start blog -->
                <div class="blog-box">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading-title text-center">

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">

                                <div class="blog-search-form">
                                    <input name="search" placeholder="Search blog" type="text" id="search">
                                    <button class="search-btn">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div><div class="row">
                                <div class="col-xl-8 col-lg-8 col-12">

                                    <div   style="

                            padding:8px;margin-top: 15px;
                            display: flex;justify-content: center;align-items: center" class="row d-flex" id="containerr">
                                        <div  id="entitiesNav">
                                        </div>
                                        <div class="row">
                                            {%  for thematique in thematiques %}
                                                <div class="col-lg-4 col-md-6 col-12">
                                                    <div class="blog-box-inner-e">
                                                        <div class="blog-img-box">
                                                            <a href="{{ path('discussions',{'id':thematique.id}) }}"><img class="img-fluid" src="{{ asset('uploads/thematique_image/' )~thematique.image  }}" alt=""></a>
                                                        </div>
                                                        <div class="blog-detail-e">
                                                            <h1>   </h1>
                                                            <h4>     {{ thematique.nom }}      </h4>

                                                            <a class="btn btn-lg btn-circle btn-outline-new-white" href="{{ path('discussions',{'id':thematique.id}) }}">Voir Discussions</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-8 col-12 blog-sidebar">
                                    <div class="right-side-blog">

                                        <h3>Discussions les plus actives</h3>
                                        <div class="post-box-blog">
                                            <div class="recent-post-box">
                                                {% for discussion in discussions %}

                                                    <div class="recent-box-blog">
                                                        <div class="recent-img">
                                                            <img class="img-fluid" src="{{  asset('assets/images/post-img-01.jpg')}}" alt="">
                                                        </div>
                                                        <div class="recent-info">
                                                            <ul>
                                                                <li><i class="zmdi zmdi-account"></i>Posted By : <span>Admin</span></li>
                                                                <li>|</li>
                                                                <li><i class="zmdi zmdi-time"></i>Date : <span>{{ discussion.datecreationdisc.format('d/m/Y H:i:s') }}</span></li>
                                                            </ul>
                                                            <h4><a href="{{ path('commentaires',{'id':discussion.id}) }}">{{ discussion.titre }}</a></h4>
                                                        </div>
                                                    </div>
                                                {% endfor %}

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- jQuery is necessary -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript">


        jQuery(document).ready(function() {
            var searchRequest = null;
            $("#search").keyup(function() {



                var minlength = 3;
                var that = this;
                var value = $(this).val(); // elyyktbo fi input 7atito fi var var
                var entitySelector = $("#entitiesNav").html('');
                if (value.length >= minlength ) {
                    if (searchRequest != null)
                        searchRequest.abort();
                    searchRequest = $.ajax({
                        type: "GET",
                        url: "{{ path('ajax_search') }}",
                        data: {
                            'q' : value
                        },
                        dataType: "text",
                        success: function(msg){
                            //we need to check if the value is the same
                            if (value==$(that).val()) {
                                var result = JSON.parse(msg);

                                $.each(result, function(key, arr) {
                                    $.each(arr, function(id, value) {
                                        if (key == 'thematique') {
                                            if (id != 'error') {
                                                x= document.getElementById("containerr");

                                                entitySelector.append('<div style="display: table;width:100%;padding: 15px"><span style="text-align: center">'+value[1]+'</span><br/><a href="./discussions/'+id+'">'+'<img src="/uploads/thematique_image/'+value[0]+'" style="width: 150px; height: 150px"/>'+'</a></div>');


                                            } else {
                                                entitySelector.append('<h2 style="font-size: 25px;color:red;text-align: center;">'+value+'</h4>');
                                            }
                                        }
                                    });
                                });
                            }
                        }
                    });
                }
            });
        });
    </script>
    <script>
        $(document).ready(function(){
            $(".btn1").click(function(){
                $("h1").slideUp();
            });
            $(".btn2").click(function(){
                $("h1").slideDown();
            });
            $(".btn3").click(function(){
                $("h1").slideToggle();
            });
        });
    </script>
{% endblock %}