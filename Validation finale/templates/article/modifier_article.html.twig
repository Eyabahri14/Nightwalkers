


{% extends 'admin/base.html.twig' %}
{% block title %}<title>edit Post</title>{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h4 class="m-t-0 m-b-30 header-title">Modifier Produit</h4>
                    {{form_start(f)}}

                    <div class="form-group">
                        <label for="name">Nom</label>
                        {{ form_widget(f.name, {'attr':{'class':'form-control'}})}}
                        <label style="color: red">{{ form_errors(f.name)}}</label>

                    </div>


                    <div class="form-group">
                        <label for="name">description</label>
                        {{ form_widget(f.description, {'attr':{'class':'form-control'}})}}
                        <label style="color: red">{{ form_errors(f.description)}}</label>


                    </div>

                    <div class="form-group">
                        <label for="name">Recette</label>
                        {{ form_widget(f.recette, {'attr':{'class':'form-control'}})}}
                    </div>

                    <div class="form-group">
                        <label for="name">picture</label>

                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="{{ app.request.getBaseURL() }}/uploads/brochures/{{ product.picture }}" alt="Card image cap">
                        </div>
                        {{ form_widget(f.picture, {'attr':{'class':'form-control'}})}}
                        <label style="color: red">{{ form_errors(f.picture)}}</label>

                    </div>

                    {{ form_end(f) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}