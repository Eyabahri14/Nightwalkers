{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
    <div class="content-page">

        <!-- Start content -->

        <div class="content">
            <div class="container-fluid">
                <!-- Start All Pages -->
                <div class="all-page-title page-breadcrumb">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1>Discussions {{ discussions|first.thematique.nom }}</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End All Pages -->

                <!-- Start blog -->
                <div class="blog-box">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="heading-title text-center">
                                    <h2>Toutes les discussions</h2>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            {%  for discussion in discussions %}
                                <div class="col-lg-2"></div>
                                <div class="col-lg-8 col-md-12 col-12">
                                    <div class="blog-box-inner-e">
                                        <div class="blog-img-box">
                                            <img class="img-fluid" src="{{ asset('uploads/thematique_image/' )  }}" alt="">
                                        </div>
                                        <div class="blog-detail">
                                            <h4>{{ discussion.titre }}</h4>
                                            <ul>
                                                <li><a href="{{ path('commentaires',{'id':discussion.id}) }}"> Participer </a></li>
                                                <li>|</li>
                                                <li><span>{{ discussion.datecreationdisc.format('d/m/Y') }}</span></li>
                                            </ul>
                                            <!--a class="btn btn-lg btn-circle btn-outline-new-white" href="{{ path('thematique',{'id':discussion.id}) }}">Voir Discussions</a-->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2"></div>

                                <div class="col-lg-2"></div>
                                <div class="col-lg-8 hr-divider" style="border-top: 5px solid #e4606d;"></div>
                                <div class="col-lg-2"></div>

                            {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
